# 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# ===========================================
# Flask基础配置
# ===========================================
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development

# ===========================================
# 数据库配置
# ===========================================
# SQLite (本地开发/测试)
DATABASE_URL=sqlite:///instance/baji_simple.db

# MySQL (生产环境) - 取消注释并配置以下参数
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/baji_simple?charset=utf8mb4

# MySQL Docker环境变量 (使用docker-compose.mysql.yml时需要)
# MYSQL_ROOT_PASSWORD=your-mysql-root-password
# MYSQL_DATABASE=baji_simple
# MYSQL_USER=baji_user
# MYSQL_PASSWORD=your-mysql-password
# MYSQL_PORT=3306

# ===========================================
# 管理员配置
# ===========================================
ADMIN_PASSWORD=admin123

# ===========================================
# 业务配置
# ===========================================
DEFAULT_PRICE=15.00
ORDER_PREFIX=BJI

# ===========================================
# 文件上传配置
# ===========================================
UPLOAD_FOLDER=static/uploads
EXPORT_FOLDER=static/exports
MAX_CONTENT_LENGTH=5242880
ALLOWED_EXTENSIONS=png,jpg,jpeg,webp
USE_DATE_FOLDER_STRUCTURE=true

# ===========================================
# 缓存配置
# ===========================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ===========================================
# 安全配置 (生产环境推荐)
# ===========================================
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax
